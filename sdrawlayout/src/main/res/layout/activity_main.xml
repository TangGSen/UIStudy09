<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sen.com.sdrawlayout.MainActivity">


    <sen.com.sdrawlayout.SDrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!-- android:gravity="start" 来区分侧滑菜单-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/fake"/>
        <sen.com.sdrawlayout.SLinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@mipmap/main"
            app:maxTraletionX="66dp"
            android:orientation="vertical">

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@mipmap/circle"
                android:text="个人中心" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@mipmap/wallet"
                android:text="钱包" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@mipmap/coupon"
                android:text="优惠券" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@mipmap/friends"
                android:text="好友" />

            <TextView
                style="@style/MenuText"
                android:drawableLeft="@mipmap/settings"
                android:text="设置" />
        </sen.com.sdrawlayout.SLinearLayout>

    </sen.com.sdrawlayout.SDrawerLayout>

</LinearLayout>
